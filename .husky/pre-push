#!/usr/bin/env sh

echo "🚀 執行 pre-push 檢查..."

# 執行測試 (如果有設定)
npm run test 2>/dev/null && echo "🧪 測試通過！" || echo "⚠️ 無測試或測試跳過"

# 執行建置檢查 (如果有 build script)
if [ -f "package.json" ] && grep -q '"build"' package.json 2>/dev/null; then
  echo "🏗️ 檢查建置..."
  npm run build 2>/dev/null || echo "⚠️ 建置檢查跳過"
fi

echo "✅ Pre-push 檢查完成！"
